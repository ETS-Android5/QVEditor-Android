<?xml version="1.0" encoding="utf-8"?>
<resources>

  <declare-styleable name="RoundImageView">
    <attr format="dimension" name="cornerRadius"/>
  </declare-styleable>
  <declare-styleable name="VeGallery">
    <attr name="android:gravity"/>
    <attr name="android:spacing"/>
    <attr name="android:unselectedAlpha"/>
    <attr name="android:animationDuration"/>
  </declare-styleable>

  <declare-styleable name="VeTrimGallery">
    <attr format="reference" name="LeftTrimBar"/>
    <attr format="reference" name="RightTrimBar"/>
  </declare-styleable>


  <declare-styleable name="CropImageView">

    <attr name="guidelines">
      <enum name="off" value="0"/>
      <enum name="onTouch" value="1"/>
      <enum name="on" value="2"/>
    </attr>

    <attr format="boolean" name="fixAspectRatio"/>
    <attr format="integer" name="aspectRatioX"/>
    <attr format="integer" name="aspectRatioY"/>

  </declare-styleable>


  <declare-styleable name="RCAttrs">
    <attr name="round_as_circle" format="boolean"/>
    <attr name="round_corner" format="dimension" />
    <attr name="round_corner_top_left" format="dimension"/>
    <attr name="round_corner_top_right" format="dimension"/>
    <attr name="round_corner_bottom_left" format="dimension"/>
    <attr name="round_corner_bottom_right" format="dimension"/>
    <attr name="stroke_color" format="color"/>
    <attr name="stroke_width" format="dimension"/>
    <attr name="clip_background" format="boolean"/>
  </declare-styleable>
</resources>