<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginTop="1dp"
    android:background="@drawable/common_simple_ripple"
    android:orientation="horizontal"
    android:paddingBottom="20dp"
    android:paddingTop="19dp"
    >

  <androidx.appcompat.widget.AppCompatImageView
      android:id="@+id/draft_iv_thumb"
      android:layout_width="90dp"
      android:layout_height="90dp"
      android:src="@drawable/draft_list_item_icon"
      android:layout_marginLeft="16dp"
      android:layout_marginStart="16dp"
      android:scaleType="centerCrop"
      />

  <RelativeLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_marginBottom="8dp"
      android:layout_marginLeft="12dp"
      android:layout_marginStart="12dp"
      android:layout_marginTop="8dp"
      android:layout_weight="1"
      android:orientation="vertical"
      >

    <TextView
        android:id="@+id/draft_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        />

  </RelativeLayout>

  <ImageView
      android:id="@+id/draft_iv_delete"
      android:layout_width="36dp"
      android:layout_height="36dp"
      android:layout_gravity="bottom"
      android:layout_marginEnd="2dp"
      android:layout_marginRight="2dp"
      android:scaleType="centerInside"
      android:src="@drawable/edit_icon_delete_nor"
      />
</LinearLayout>