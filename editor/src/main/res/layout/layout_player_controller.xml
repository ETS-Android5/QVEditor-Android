<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativelayout_seekbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <ImageButton
      android:id="@+id/ib_pc_play"
      android:layout_width="38dp"
      android:layout_height="38dp"
      android:layout_centerVertical="true"
      android:layout_marginLeft="20dp"
      android:layout_marginStart="20dp"
      android:background="@null"
      android:contentDescription="@null"
      android:padding="6dp"
      android:scaleType="centerCrop"
      android:src="@drawable/editorx_player_play"
      />

  <TextView
      android:id="@+id/tv_pc_current_time"
      android:layout_width="wrap_content"
      android:layout_height="30dp"
      android:layout_toRightOf="@+id/ib_pc_play"
      android:layout_centerVertical="true"
      android:layout_marginEnd="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginStart="8dp"
      android:gravity="center"
      android:textStyle="bold"
      android:maxLines="1"
      android:text=""
      android:textColor="@color/white"
      android:textSize="12sp"
      />

  <SeekBar
      android:id="@+id/seekbar_pc_progress"
      android:layout_width="match_parent"
      android:layout_height="30dp"
      android:layout_centerVertical="true"
      android:layout_toEndOf="@+id/tv_pc_current_time"
      android:layout_toLeftOf="@+id/tv_pc_duration"
      android:layout_toRightOf="@+id/tv_pc_current_time"
      android:layout_toStartOf="@+id/tv_pc_duration"
      android:focusable="true"
      android:max="100"
      android:maxHeight="2dp"
      android:paddingEnd="10dp"
      android:paddingLeft="10dp"
      android:paddingRight="10dp"
      android:paddingStart="10dp"
      android:progress="0"
      android:progressDrawable="@drawable/view_player_controller_seekbar_progress"
      android:splitTrack="false"
      android:thumb="@drawable/view_player_controller_seekbar_thumbnail"
      android:visibility="visible"
      />

  <TextView
      android:id="@+id/tv_pc_duration"
      android:layout_width="wrap_content"
      android:layout_height="30dp"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:layout_marginEnd="20dp"
      android:layout_marginLeft="8dp"
      android:layout_marginRight="20dp"
      android:layout_marginStart="8dp"
      android:gravity="center"
      android:maxLines="1"
      android:textStyle="bold"
      android:text=""
      android:textColor="@color/white"
      android:textSize="12sp"
      />

</RelativeLayout>