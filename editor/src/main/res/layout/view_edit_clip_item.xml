<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation="vertical">

  <com.quvideo.application.widget.round.RCRelativeLayout
    android:id="@+id/layoutCover"
    android:layout_width="60dp"
    android:layout_height="60dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:round_corner="4dp">

    <androidx.appcompat.widget.AppCompatImageView
      android:id="@+id/home_template_item_image"
      android:layout_width="match_parent"
      android:layout_height="match_parent" />

  </com.quvideo.application.widget.round.RCRelativeLayout>


  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/tvContent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="5dp"
    android:textColor="@color/white"
    android:textSize="8sp"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="@id/layoutCover"
    app:layout_constraintEnd_toEndOf="@id/layoutCover" />

  <androidx.appcompat.widget.AppCompatImageView
    android:id="@+id/imgFocus"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:background="@drawable/edit_shape_clip_item_sel"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="@id/layoutCover"
    app:layout_constraintEnd_toEndOf="@id/layoutCover"
    app:layout_constraintStart_toStartOf="@id/layoutCover"
    app:layout_constraintTop_toTopOf="@id/layoutCover" />

</androidx.constraintlayout.widget.ConstraintLayout>