<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation="vertical">

  <androidx.appcompat.widget.AppCompatImageView
    android:id="@+id/home_template_item_image"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:padding="1dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <androidx.appcompat.widget.AppCompatImageView
    android:id="@+id/imgFocus"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:background="@drawable/edit_shape_clip_item_sel"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="@id/home_template_item_image"
    app:layout_constraintEnd_toEndOf="@id/home_template_item_image"
    app:layout_constraintStart_toStartOf="@id/home_template_item_image"
    app:layout_constraintTop_toTopOf="@id/home_template_item_image" />

</androidx.constraintlayout.widget.ConstraintLayout>