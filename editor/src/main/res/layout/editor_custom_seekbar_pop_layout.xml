<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/seekbar_pop_tv_tip"
      android:gravity="center_vertical"
      android:layout_centerInParent="true"
      android:orientation="horizontal"
      >

    <TextView
        android:id="@+id/seekbar_pop_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:textColor="@color/color_ffe6e6e6"
        android:textSize="12sp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/seekbar_pop_tv_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_gravity="end|center_vertical"
        android:gravity="center_vertical"
        android:textColor="@color/color_ffe6e6e6"
        android:textSize="14sp"
        />

    <com.quvideo.application.widget.seekbar.DoubleSeekbar
        android:id="@+id/seekbar_pop_progress"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        />

    <TextView
        android:id="@+id/seekbar_pop_tv_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_gravity="end|center_vertical"
        android:gravity="center_vertical"
        android:textColor="@color/color_ffe6e6e6"
        android:textSize="14sp"
        />

  </LinearLayout>
</RelativeLayout>