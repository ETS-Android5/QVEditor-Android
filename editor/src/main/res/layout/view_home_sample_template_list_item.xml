<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_gravity="center"
  android:gravity="center"
  android:orientation="vertical">


  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/home_template_item_text"
    android:layout_width="60dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:singleLine="true"
    android:textColor="#E6E6E6"
    android:textSize="10sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <androidx.appcompat.widget.AppCompatImageView
    android:id="@+id/home_template_item_image"
    android:layout_width="60dp"
    android:layout_height="68dp"
    android:layout_marginTop="4dp"
    android:padding="1dp"
    android:scaleType="centerInside"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/home_template_item_text" />

  <androidx.appcompat.widget.AppCompatImageView
    android:id="@+id/imgFocus"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:visibility="gone"
    android:background="@drawable/edit_shape_clip_item_sel"
    app:layout_constraintBottom_toBottomOf="@id/home_template_item_image"
    app:layout_constraintEnd_toEndOf="@id/home_template_item_image"
    app:layout_constraintStart_toStartOf="@+id/home_template_item_image"
    app:layout_constraintTop_toTopOf="@id/home_template_item_image" />

</androidx.constraintlayout.widget.ConstraintLayout>