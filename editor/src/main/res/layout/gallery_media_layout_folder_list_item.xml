<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:background="@drawable/gallery_media_selector_item_bg"
  android:id="@+id/folder_item_layout_root"
  android:layout_height="72dp"
  android:orientation="horizontal">

  <com.quvideo.application.gallery.widget.RoundImageView
    android:id="@+id/folder_item_cover_img"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_gravity="center_vertical"
    android:contentDescription="@null"
    android:scaleType="centerCrop"
    android:layout_marginLeft="16dp"
    android:layout_marginStart="16dp"
    android:src="@drawable/gallery_media_folder_item_cover_def_icon"
    app:cornerRadius="4dp" />

  <LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="12dp"
    android:layout_marginStart="12dp"
    android:orientation="vertical">

    <TextView
      android:id="@+id/folder_item_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:singleLine="true"
      android:ellipsize="end"
      android:textColor="@color/color_ff45454d"
      android:textSize="14sp"
      />

    <TextView
      android:id="@+id/folder_item_number"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="6dp"
      android:textColor="@color/color_ffaaaab3"
      android:textSize="12sp"
      />

  </LinearLayout>

  <ImageView
    android:id="@+id/folder_item_checkbox"
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginRight="16dp"
    android:layout_marginEnd="16dp"
    android:layout_gravity="center_vertical"
    android:src="@drawable/gallery_pic_preview_item_slc"
    android:visibility="invisible"/>

</LinearLayout>