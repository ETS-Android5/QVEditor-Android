<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/folder_list_layout_root"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:background="@color/transparent"
  android:orientation="vertical">

  <ImageView
    android:layout_width="26dp"
    android:layout_height="14dp"
    android:layout_gravity="right|end"
    android:layout_marginRight="26dp"
    android:layout_marginEnd="26dp"
    android:scaleType="centerCrop"
    android:src="@drawable/gallery_media_folder_list_arrow_icon" />

  <LinearLayout
    android:layout_width="230dp"
    android:layout_height="460dp"
    android:layout_gravity="right|end"
    android:layout_marginRight="14dp"
    android:layout_marginEnd="14dp"
    android:background="@drawable/gallery_media_shape_folder_list_bg"
    android:orientation="vertical"
    android:paddingBottom="12dp">

    <TextView
      android:id="@+id/folder_list_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="16dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      android:layout_marginBottom="12dp"
      android:textColor="@color/color_ff2c2c30"
      android:textSize="20sp" />

    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/folder_list_recyclerview"
      android:layout_width="match_parent"
      android:layout_height="match_parent" />

  </LinearLayout>

</LinearLayout>